<h1 class="row justify-content-center mb-4">The Burgernator!</h1>

<main class="container">
  <div class="row mb-4">

    <div class="col-6">
      <h2>Burgers in the queue:</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <h2>Burgers in the poo:</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row justify-content-center">
    <h2 class="mb-4">Add a Burger You'd Like to Devour!</h2>
    <form class="create-form">

      <div class="form-group mb-1">
        <label for="burger">Kind of Burger:</label>
        <input type="text" id="burger" name="burger_name">
      </div>

      <button class="btn btn-primary btn-sm" type="submit">Add Burger</button>

    </form>
  </div>

  <footer class="footer">

  </footer>

</main>