<h1 class="row justify-content-center mb-4">The Burgernator!</h1>

<main class="container">
  <div class="row mb-4">

    <div class="col-6">
      <h2>Burgers in the queue:</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <h2>Burgers in the poo:</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="container">
    <h2 class="row justify-content-center mb-4">Add a Burger You'd Like to Devour!</h2>
    <form class="container create-form">

      <div class="container justify-content-center text-center form-group mb-1">
        <label class="row justify-content-center" for="burger">Kind of Burger:</label>
        <input class="row justify-content-center m-auto mb-1" type="text" id="burger" name="burger_name">

        <button class="row justify-content-center btn btn-primary btn-sm mt-2
        " type="submit">Add Burger</button>
      </div>


    </form>
  </div>

  <footer class="footer">

  </footer>

</main>